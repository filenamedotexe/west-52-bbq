---
export const prerender = false;
import Layout from '~/layouts/Layout.astro';

const metadata = {
  title: 'West 52 BBQ - Menu Admin',
  robots: {
    index: false,
    follow: false,
  },
};
---

<Layout metadata={metadata}>
  <!-- Login Screen -->
  <div id="login-screen" class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-md w-full bg-white rounded-lg shadow-lg p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">West 52 BBQ</h1>
        <p class="text-gray-600 mt-2">Menu Administration</p>
      </div>

      <div id="login-error" class="hidden bg-red-50 text-red-700 px-4 py-3 rounded mb-4">
        Incorrect password
      </div>

      <form id="login-form" class="space-y-6">
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Password
          </label>
          <input
            type="password"
            id="password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent outline-none"
            placeholder="Enter admin password"
            required
          />
        </div>

        <button
          type="submit"
          class="w-full bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700 transition-colors font-medium"
        >
          Login
        </button>
      </form>
    </div>
  </div>

  <!-- Admin Dashboard -->
  <div id="admin-screen" class="hidden min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Menu Manager</h1>
            <p class="text-sm text-gray-600">West 52 BBQ</p>
          </div>
          <button
            id="logout-btn"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Logout
          </button>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Actions Bar -->
      <div class="flex justify-between items-center mb-6">
        <div class="text-sm text-gray-600">
          <span id="item-count">0</span> menu items
        </div>
        <button
          id="add-new-btn"
          class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700 transition-colors font-medium"
        >
          + Add New Item
        </button>
      </div>

      <!-- Filters -->
      <div class="mb-6">
        <!-- Status Filter -->
        <div class="flex space-x-2 mb-3">
          <button data-status="all" class="status-filter px-3 py-1 text-sm rounded bg-orange-600 text-white font-medium">
            All Status
          </button>
          <button data-status="active" class="status-filter px-3 py-1 text-sm rounded bg-gray-200 text-gray-700 hover:bg-gray-300">
            Active Only
          </button>
          <button data-status="inactive" class="status-filter px-3 py-1 text-sm rounded bg-gray-200 text-gray-700 hover:bg-gray-300">
            Inactive Only
          </button>
        </div>

        <!-- Category Filter Tabs -->
        <div class="border-b border-gray-200">
          <nav class="flex space-x-4 overflow-x-auto" aria-label="Category tabs">
            <button data-category="all" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-orange-600 font-medium text-sm text-orange-600">
              All Items
            </button>
            <button data-category="smoked-meats" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Smoked Meats
            </button>
            <button data-category="sandwiches" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Sandwiches
            </button>
            <button data-category="sides" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Sides
            </button>
            <button data-category="combo-platters" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Combo Platters
            </button>
            <button data-category="desserts" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Desserts
            </button>
            <button data-category="beverages" class="category-tab whitespace-nowrap py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Beverages
            </button>
          </nav>
        </div>
      </div>

      <!-- Menu Items Grid -->
      <div id="menu-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Loading state -->
        <div class="col-span-full text-center py-12 text-gray-500">
          Loading menu items...
        </div>
      </div>
    </main>

    <!-- Edit Modal -->
    <div id="edit-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
          <div class="flex justify-between items-center mb-6">
            <h2 id="modal-title" class="text-2xl font-bold text-gray-900">Add Menu Item</h2>
            <button id="close-modal" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <form id="item-form" class="space-y-4">
            <input type="hidden" id="item-id">
            <input type="hidden" id="item-slug">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Item Name *</label>
                <input type="text" id="item-name" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent">
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Description *</label>
                <textarea id="item-description" required rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"></textarea>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Price *</label>
                <input type="number" id="item-price" required step="0.01" min="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Category *</label>
                <select id="item-category" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent">
                  <option value="smoked-meats">Smoked Meats</option>
                  <option value="sandwiches">Sandwiches</option>
                  <option value="sides">Sides</option>
                  <option value="desserts">Desserts</option>
                  <option value="beverages">Beverages</option>
                  <option value="combo-platters">Combo Platters</option>
                </select>
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Image *</label>

                <!-- Current Image Preview -->
                <div id="image-preview-container" class="mb-3 hidden">
                  <img id="image-preview" src="" alt="Preview" class="w-full h-48 object-cover rounded-lg border">
                </div>

                <!-- Hidden input for the URL -->
                <input type="hidden" id="item-image-hidden" required>

                <!-- Upload Section -->
                <div class="border-2 border-dashed border-gray-300 rounded-lg p-4">
                  <div class="flex flex-col items-center space-y-2">
                    <input
                      type="file"
                      id="photo-upload"
                      accept="image/jpeg,image/png,image/webp"
                      class="hidden"
                    >
                    <button
                      type="button"
                      id="upload-button"
                      class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                    >
                      Choose Photo
                    </button>
                    <p class="text-xs text-gray-500">JPEG, PNG, or WebP (max 10MB)</p>
                    <div id="upload-status" class="text-sm"></div>
                  </div>
                </div>

                <!-- Manual URL Entry (optional fallback) -->
                <details class="mt-2">
                  <summary class="text-xs text-gray-500 cursor-pointer hover:text-gray-700">Or enter URL manually</summary>
                  <input
                    type="text"
                    id="manual-image-url"
                    placeholder="/images/menu/..."
                    class="w-full mt-2 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent text-sm"
                  >
                </details>
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Serving Size</label>
                <input type="text" id="item-serving" placeholder="e.g., Half pound with 2 sides" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent">
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Calories</label>
                <input type="number" id="item-calories" min="0" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent">
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Spicy Level: <span id="spicy-value" class="text-orange-600 font-semibold">0</span> üå∂Ô∏è
                </label>
                <input
                  type="range"
                  id="item-spicy"
                  min="0"
                  max="5"
                  step="1"
                  value="0"
                  class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-orange-600"
                  oninput="document.getElementById('spicy-value').textContent = this.value"
                >
                <div class="flex justify-between text-xs text-gray-500 mt-1">
                  <span>None</span>
                  <span>Mild</span>
                  <span>Medium</span>
                  <span>Hot</span>
                  <span>Very Hot</span>
                  <span>üî•üî•üî•</span>
                </div>
              </div>

              <div>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input type="checkbox" id="item-featured" class="w-4 h-4 text-orange-600 border-gray-300 rounded focus:ring-orange-500">
                  <span class="text-sm font-medium text-gray-700">Featured Item</span>
                </label>
              </div>

              <div>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input type="checkbox" id="item-active" checked class="w-4 h-4 text-green-600 border-gray-300 rounded focus:ring-green-500">
                  <span class="text-sm font-medium text-gray-700">Active (Visible on Menu)</span>
                </label>
              </div>
            </div>

            <div class="flex justify-end space-x-3 pt-4 border-t">
              <button type="button" id="cancel-btn" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                Cancel
              </button>
              <button type="submit" class="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
                Save Item
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    const ADMIN_PASSWORD = 'password123';
    const AUTH_KEY = 'west52_admin_auth';

    // Elements
    const loginScreen = document.getElementById('login-screen');
    const adminScreen = document.getElementById('admin-screen');
    const loginForm = document.getElementById('login-form');
    const loginError = document.getElementById('login-error');
    const logoutBtn = document.getElementById('logout-btn');
    const addNewBtn = document.getElementById('add-new-btn');
    const menuGrid = document.getElementById('menu-grid');
    const itemCount = document.getElementById('item-count');
    const editModal = document.getElementById('edit-modal');
    const closeModal = document.getElementById('close-modal');
    const cancelBtn = document.getElementById('cancel-btn');
    const itemForm = document.getElementById('item-form');

    let menuItems = [];
    let editingItem = null;
    let currentCategory = 'all';
    let currentStatus = 'all';

    // Auth functions
    function isAuthenticated() {
      return sessionStorage.getItem(AUTH_KEY) === 'true';
    }

    function showAdmin() {
      loginScreen.classList.add('hidden');
      adminScreen.classList.remove('hidden');
      loadMenuItems();
    }

    function showLogin() {
      loginScreen.classList.remove('hidden');
      adminScreen.classList.add('hidden');
      sessionStorage.removeItem(AUTH_KEY);
    }

    // Login handling
    loginForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const password = document.getElementById('password').value;

      if (password === ADMIN_PASSWORD) {
        sessionStorage.setItem(AUTH_KEY, 'true');
        loginError.classList.add('hidden');
        showAdmin();
      } else {
        loginError.classList.remove('hidden');
      }
    });

    logoutBtn.addEventListener('click', showLogin);

    // Load menu items
    async function loadMenuItems() {
      try {
        const response = await fetch('/api/menu');
        menuItems = await response.json();
        renderMenuItems();
      } catch (error) {
        console.error('Error loading menu items:', error);
        menuGrid.innerHTML = '<div class="col-span-full text-center py-12 text-red-500">Error loading menu items</div>';
      }
    }

    // Render menu items
    function renderMenuItems() {
      // Filter items by current category and status
      let filteredItems = menuItems;

      // Filter by category
      if (currentCategory !== 'all') {
        filteredItems = filteredItems.filter(item => item.category === currentCategory);
      }

      // Filter by status
      if (currentStatus === 'active') {
        filteredItems = filteredItems.filter(item => item.active !== false);
      } else if (currentStatus === 'inactive') {
        filteredItems = filteredItems.filter(item => item.active === false);
      }

      itemCount.textContent = filteredItems.length;

      if (menuItems.length === 0) {
        menuGrid.innerHTML = '<div class="col-span-full text-center py-12 text-gray-500">No menu items yet. Click "Add New Item" to get started.</div>';
        return;
      }

      if (filteredItems.length === 0) {
        menuGrid.innerHTML = '<div class="col-span-full text-center py-12 text-gray-500">No items match the current filters.</div>';
        return;
      }

      menuGrid.innerHTML = filteredItems.map(item => {
        const escapedId = item.id.replace(/'/g, "\\'");
        const price = typeof item.price === 'number' ? item.price.toFixed(2) : '0.00';
        const isActive = item.active !== undefined ? item.active : true;
        const statusClass = isActive ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600';
        const statusText = isActive ? 'Active' : 'Inactive';
        const cardOpacity = isActive ? '' : 'opacity-60';
        const imageUrl = item.image || '/images/menu/placeholder.svg';

        return `
        <div class="bg-white rounded-lg shadow-sm border overflow-hidden hover:shadow-md transition-shadow ${cardOpacity}">
          <!-- Image -->
          <div class="aspect-video w-full bg-gray-200 overflow-hidden">
            <img
              src="${imageUrl}"
              alt="${item.name}"
              class="w-full h-full object-cover"
              onerror="this.src='/images/menu/placeholder.svg'"
            />
          </div>

          <!-- Content -->
          <div class="p-4">
            <div class="flex justify-between items-start mb-2">
              <h3 class="font-bold text-lg text-gray-900">${item.name}</h3>
              <span class="text-lg font-bold text-orange-600 ml-2 flex-shrink-0">$${price}</span>
            </div>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">${item.description}</p>
            <div class="flex items-center justify-between mb-2">
              <span class="text-xs px-2 py-1 bg-gray-100 rounded">${item.category}</span>
              <span class="text-xs px-2 py-1 ${statusClass} rounded font-semibold">${statusText}</span>
            </div>
            <div class="flex items-center justify-end space-x-2">
              <button onclick="editItem('${escapedId}')" class="text-sm text-blue-600 hover:text-blue-800">Edit</button>
              <button onclick="deleteItem('${escapedId}')" class="text-sm text-red-600 hover:text-red-800">Delete</button>
            </div>
          </div>
        </div>
      `;
      }).join('');
    }

    // Modal functions
    function openModal(item = null) {
      editingItem = item;
      const title = document.getElementById('modal-title');
      title.textContent = item ? 'Edit Menu Item' : 'Add New Item';

      // Always reset form first
      itemForm.reset();

      // Then populate if editing
      if (item) {
        document.getElementById('item-id').value = item.id || '';
        document.getElementById('item-slug').value = item.slug || '';
        document.getElementById('item-name').value = item.name || '';
        document.getElementById('item-description').value = item.description || '';
        document.getElementById('item-price').value = item.price !== undefined ? item.price : '';
        document.getElementById('item-category').value = item.category || 'smoked-meats';
        document.getElementById('item-image-hidden').value = item.image || '';
        document.getElementById('item-serving').value = item.servingSize || '';
        document.getElementById('item-calories').value = item.calories !== undefined ? item.calories : '';
        document.getElementById('item-spicy').value = item.spicyLevel !== undefined ? item.spicyLevel : 0;
        document.getElementById('item-featured').checked = item.featured || false;
        document.getElementById('item-active').checked = item.active !== undefined ? item.active : true;

        // Update spicy slider display
        document.getElementById('spicy-value').textContent = item.spicyLevel !== undefined ? item.spicyLevel : 0;

        // Show image preview if exists
        if (item.image) {
          imagePreview.src = item.image;
          imagePreviewContainer.classList.remove('hidden');
        } else {
          imagePreviewContainer.classList.add('hidden');
        }
      } else {
        // Clear image preview for new items
        imagePreviewContainer.classList.add('hidden');
        uploadStatus.textContent = '';
      }

      editModal.classList.remove('hidden');
    }

    function closeModalFn() {
      editModal.classList.add('hidden');
      editingItem = null;
      itemForm.reset();
      imagePreviewContainer.classList.add('hidden');
      uploadStatus.textContent = '';
    }

    // Event listeners
    addNewBtn.addEventListener('click', () => openModal());
    closeModal.addEventListener('click', closeModalFn);
    cancelBtn.addEventListener('click', closeModalFn);

    // Photo upload handling
    const photoUpload = document.getElementById('photo-upload');
    const uploadButton = document.getElementById('upload-button');
    const uploadStatus = document.getElementById('upload-status');
    const itemImageHidden = document.getElementById('item-image-hidden');
    const imagePreview = document.getElementById('image-preview');
    const imagePreviewContainer = document.getElementById('image-preview-container');
    const manualImageUrl = document.getElementById('manual-image-url');

    uploadButton.addEventListener('click', () => {
      photoUpload.click();
    });

    photoUpload.addEventListener('change', async (e) => {
      const file = e.target.files?.[0];
      if (!file) return;

      uploadStatus.textContent = 'Uploading...';
      uploadStatus.className = 'text-sm text-blue-600';
      uploadButton.disabled = true;

      try {
        const formData = new FormData();
        formData.append('photo', file);

        const response = await fetch('/api/menu/upload', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();

        if (response.ok && result.success) {
          itemImageHidden.value = result.url;
          imagePreview.src = result.url;
          imagePreviewContainer.classList.remove('hidden');

          uploadStatus.textContent = '‚úì Upload successful!';
          uploadStatus.className = 'text-sm text-green-600';
        } else {
          throw new Error(result.error || 'Upload failed');
        }
      } catch (error) {
        console.error('Upload error:', error);
        uploadStatus.textContent = `‚úó ${error.message}`;
        uploadStatus.className = 'text-sm text-red-600';
      } finally {
        uploadButton.disabled = false;
      }
    });

    manualImageUrl.addEventListener('input', (e) => {
      const url = e.target.value.trim();
      if (url) {
        itemImageHidden.value = url;
        imagePreview.src = url;
        imagePreview.onerror = () => {
          uploadStatus.textContent = '‚úó Invalid image URL';
          uploadStatus.className = 'text-sm text-red-600';
        };
        imagePreview.onload = () => {
          uploadStatus.textContent = '‚úì Image loaded';
          uploadStatus.className = 'text-sm text-green-600';
        };
        imagePreviewContainer.classList.remove('hidden');
      }
    });

    // Save item
    itemForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const spicyVal = document.getElementById('item-spicy').value;
      const caloriesVal = document.getElementById('item-calories').value;

      const data = {
        id: document.getElementById('item-id').value,
        slug: document.getElementById('item-slug').value,
        name: document.getElementById('item-name').value,
        description: document.getElementById('item-description').value,
        price: parseFloat(document.getElementById('item-price').value),
        category: document.getElementById('item-category').value,
        image: document.getElementById('item-image-hidden').value,
        servingSize: document.getElementById('item-serving').value,
        calories: caloriesVal ? parseInt(caloriesVal) : null,
        spicyLevel: spicyVal !== '' ? parseInt(spicyVal) : null,
        featured: document.getElementById('item-featured').checked,
        active: document.getElementById('item-active').checked,
        dietaryTags: [],
        availability: 'always',
      };

      try {
        const response = await fetch('/api/menu/save', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          closeModalFn();
          await loadMenuItems();
        } else {
          alert('Error saving menu item');
        }
      } catch (error) {
        console.error('Error saving item:', error);
        alert('Error saving menu item');
      }
    });

    // Global functions for buttons
    window.editItem = (id) => {
      const item = menuItems.find(i => i.id === id);
      if (item) openModal(item);
    };

    window.deleteItem = async (id) => {
      if (!confirm('Are you sure you want to delete this item?')) return;

      try {
        const response = await fetch('/api/menu/delete', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id }),
        });

        if (response.ok) {
          await loadMenuItems();
        } else {
          alert('Error deleting menu item');
        }
      } catch (error) {
        console.error('Error deleting item:', error);
        alert('Error deleting menu item');
      }
    };

    // Category tab switching
    function switchCategory(category) {
      currentCategory = category;

      // Update tab styling
      document.querySelectorAll('.category-tab').forEach(tab => {
        const tabCategory = tab.getAttribute('data-category');
        if (tabCategory === category) {
          tab.classList.remove('border-transparent', 'text-gray-500');
          tab.classList.add('border-orange-600', 'text-orange-600');
        } else {
          tab.classList.remove('border-orange-600', 'text-orange-600');
          tab.classList.add('border-transparent', 'text-gray-500');
        }
      });

      renderMenuItems();
    }

    // Add click handlers to category tabs
    document.querySelectorAll('.category-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        const category = tab.getAttribute('data-category');
        switchCategory(category);
      });
    });

    // Add click handlers to status filter buttons
    document.querySelectorAll('.status-filter').forEach(button => {
      button.addEventListener('click', () => {
        currentStatus = button.getAttribute('data-status');

        // Update button styling
        document.querySelectorAll('.status-filter').forEach(btn => {
          if (btn === button) {
            btn.classList.remove('bg-gray-200', 'text-gray-700');
            btn.classList.add('bg-orange-600', 'text-white');
          } else {
            btn.classList.remove('bg-orange-600', 'text-white');
